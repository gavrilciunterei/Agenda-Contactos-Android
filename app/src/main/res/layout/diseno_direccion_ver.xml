<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginRight="8dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/editTextCalle2"
            android:layout_width="239dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Calle"
            android:inputType="textPersonName"
            />

        <TextView
            android:id="@+id/editTextPiso2"
            android:layout_width="179dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Piso"
            android:inputType="textPersonName" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/editTextNumero2"
            android:layout_width="113dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Numero"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/editTextPuerta2"
            android:layout_width="72dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Puerta"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/editTextCodigo2"
            android:layout_width="237dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Codigo"
            android:inputType="textPersonName" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/editTextCiudad2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Ciudad"
            android:inputType="textPersonName" />

        <Spinner
            android:id="@+id/spinnerProvincia3"
            android:layout_width="match_parent"
            android:background="@null"
            android:layout_height="match_parent" />
    </LinearLayout>

</LinearLayout>